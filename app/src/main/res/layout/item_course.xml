<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Curso"
            android:textStyle="bold"
            android:textColor="#E00051"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Curso"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/coordinatorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coordenador: Nome do Coordenador"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/subjectsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matérias: Matéria 1, Matéria 2, Matéria 3"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/edit_24"
        android:drawableTint="@color/pink"
        android:textColor="#E00051"
        />
</LinearLayout>
