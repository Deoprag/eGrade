<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".view.CoordinatorRegisterFragment">

<TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastros"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textView"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnRegisterCoordinator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/people_24"
            android:drawablePadding="8dp"
            android:text="Cadastrar Coordenador"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegisterProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/people_24"
            android:drawablePadding="8dp"
            android:text="Cadastrar Professor"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegisterStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/people_24"
            android:drawablePadding="8dp"
            android:text="Cadastrar Aluno"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegisterSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/book_24"
            android:drawablePadding="8dp"
            android:text="Cadastrar MatÃ©ria"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnRegisterCourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/book_24"
            android:drawablePadding="8dp"
            android:text="Cadastrar Curso"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="start|center_vertical"/>

    </LinearLayout>

</RelativeLayout>
